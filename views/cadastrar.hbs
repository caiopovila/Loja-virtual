<h1 class="text-center">Cadastre-se</h1>

<hr>

{{#if m}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Atente-se</strong> {{ m }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}

{{#if info}}
 <form action="/cadastrar" method="post">

    <section class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" required name="nome" value="{{info.displayName}}" id="nome">
    </section>

    <section class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" required name="email" value="{{info.emails.[0].value}}" id="email">
    </section>

    <section class="form-group">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" required name="senha" id="senha">
    </section>

    <section class="form-group">
        <label for="senhaC">Comfirmar senha</label>
        <input type="password" class="form-control" required name="senhaC" id="senhaC">
    </section>

    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
</form>

{{else}}

